{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "checkJs": true,
    "rootDir": ".",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.js", "src/**/*.d.ts", "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
